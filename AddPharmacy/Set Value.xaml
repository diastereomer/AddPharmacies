        Title="Set_Value" Height="150" Width="300"  Background="#fafafa" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"  Icon="c:\users\pei.wang\documents\visual studio 2013\projects\AddPharmacy\AddPharmacy\Resources\setting.ico" >
